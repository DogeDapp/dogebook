<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:orientation="vertical"
    tools:context="com.example.delll.mfinalproject.ReadingPlanDetails"
    android:background="@mipmap/pic5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/book_name"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="编译原理"
            android:textSize="36sp"
            android:textColor="@color/disWhite"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目标日期："
                        android:textColor="@color/transparentWhite1"/>
                    <TextView
                        android:id="@+id/updata_date"
                        android:text="2016/12/24"
                        android:textColor="@color/transparentWhite1"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前页数："
                        android:textColor="@color/transparentWhite1"/>
                    <TextView
                        android:id="@+id/current_pageNum"
                        android:text="201"
                        android:textColor="@color/transparentWhite1"/>
                </TableRow>

            </TableLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp">
            <Button
                android:id="@+id/change"
                android:layout_marginTop="5dp"
                android:layout_height="25dp"
                android:text="更改计划"
                android:textColor="@color/transparentBlack"
                android:background="@drawable/button_background3"
                android:layout_width="70dp" />
            <Button
                android:id="@+id/timer"
                android:layout_marginTop="5dp"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="开始读书"
                android:textColor="@color/transparentBlack"
                android:background="@drawable/button_background3"
                android:layout_marginLeft="7dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/transparentBlack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单词笔记"
            android:textColor="@color/disWhite"
            android:textSize="18sp"/>


        <EditText
            android:id="@+id/edit_plan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top"
            android:textColor="#ffffff"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/save_plan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/halfTransparent"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="@color/disWhite"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/clear_plan"
                android:layout_width="0dp"
                android:background="@color/halfTransparent"
                android:layout_height="wrap_content"
                android:text="清除"
                android:textColor="@color/disWhite"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_magnifier"/>

        <EditText
            android:id="@+id/query_eidtText"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入查询单词"
            android:textColorHint="@color/disWhite"/>

        <Button
            android:id="@+id/search_button"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:textColor="@color/transparentBlack"
            android:background="@drawable/button_background3"
            android:text="查询" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/english_TextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="English"
            android:textColor="@color/disWhite"
            android:textSize="18sp"
            android:gravity="left"/>

        <TextView
            android:id="@+id/yinbiao_TextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_weight="2"
            android:text="yinbiao"
            android:textSize="18sp"
            android:textColor="@color/disWhite"/>

    </LinearLayout>

    <TextView
        android:id="@+id/chinese_TextView"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="n.英文"
        android:textSize="18sp"
        android:gravity="left"
        android:textColor="@color/disWhite"/>
</LinearLayout>
